# ============================================================================
# OpenRouter API Key - ONLY needed if using Python chains (chains/*.py)
# NOT required if you're using ChatGPT/Claude connectors to call MCP tools
# ============================================================================
OPENROUTER_API_KEY=

# Optional OpenRouter settings (only if using Python chains)
OPENROUTER_MODEL=gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_REFERER=https://factory.ai
OPENROUTER_TITLE=Sefaria MCP

